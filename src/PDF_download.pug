extends _layout.pug

append vars
    - var title = '下載簽署後文件';

append content
    //- 現在把上傳檔案,顯示檔案,下載檔案的功能全部寫在一起 --->最終它們會在不同的頁面上呈現
    input.select(type='file', accept='application/pdf')
    canvas#canvas(style='border: 1px solid #000')
    .btn.download 下載PDF
    

append script
    // 引入pdf.js的套件
    script(src='https://mozilla.github.io/pdf.js/build/pdf.js')
    script(src='../js/pdf_update.js')
    script(src='../js/fileReader.js')
    // 引入jsPDF的套件
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.4/jspdf.min.js')
    script(src='../js/pdf_download.js')
