extends _layout.pug

append vars
    - var title = '上傳檔案';

append content

    include _header.pug

    .index
        //- .index_head
        .wrap_inner     
            .index_top_tab
                include _stepbar.pug
            .index_center_wrap
                .center_wrap_topTab
                    a.tab_item.tab_item--active(href="#" title="上傳檔案") 上傳檔案
                .center_wrap_bg
                    canvas#canvas(style="display:none")
                    .center_content(style="display:block")
                        .img-wrap-download
                            img(src="./imgs/icon_download.svg", alt="")
                        .txt_wrap_upload
                            p 點擊此處上傳檔案
                            p (限 .pdf, .png, .jpg)
                            p 檔案不得超過10MB
                .bottom_wrap
                    label.btn 上傳文件
                        input.select(type='file', style="display:none;" , accept='application/pdf')
                    button.btn.open 加入簽名
        include _popup_sign.pug
append script
    // 引入pdf.js的套件
    script(src='https://mozilla.github.io/pdf.js/build/pdf.js')
    script(src='../js/pdf_update.js')
    script(src='../js/fileReader.js')
    //- script(src='../js/btn_changed.js')